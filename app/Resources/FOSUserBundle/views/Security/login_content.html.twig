{#{% trans_default_domain 'FOSUserBundle' %}#}


<form action="{{ path("fos_user_security_check") }}" method="post" class="m-t">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}
    <div class="form-group">
        <input type="email" class="form-control" name="_username" placeholder="Email" required="">
    </div>
    <div class="form-group">
        <input type="password" class="form-control" name="_password" placeholder="Password" required="">
    </div>
    <button type="submit" name="_submit" class="btn btn-primary block full-width m-b">Login</button>

</form>
